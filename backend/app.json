{
  "name": "Amour Florals Backend",
  "description": "E-commerce backend for flower delivery platform",
  "repository": "https://github.com/yourusername/amour-florals",
  "logo": "https://cdn.jsdelivr.net/npm/heroicons@1.0.6/outline/heart.svg",
  "keywords": ["node", "express", "mongodb", "ecommerce", "flowers"],
  "image": "heroku/nodejs",
  "env": {
    "NODE_ENV": {
      "description": "Environment mode",
      "value": "production"
    },
    "MONGODB_URI": {
      "description": "MongoDB connection string",
      "required": true
    },
    "JWT_SECRET": {
      "description": "JWT secret key for authentication",
      "generator": "secret"
    },
    "RAZORPAY_KEY_ID": {
      "description": "Razorpay Key ID",
      "required": true
    },
    "RAZORPAY_KEY_SECRET": {
      "description": "Razorpay Key Secret",
      "required": true
    },
    "RAZORPAY_WEBHOOK_SECRET": {
      "description": "Razorpay Webhook Secret",
      "required": true
    },
    "EMAIL_SERVICE": {
      "description": "Email service provider",
      "value": "gmail"
    },
    "EMAIL_USERNAME": {
      "description": "Email username for notifications"
    },
    "EMAIL_PASSWORD": {
      "description": "Email password or app password"
    },
    "EMAIL_FROM": {
      "description": "From email address",
      "value": "Amour Florals <noreply@amourflorals.com>"
    },
    "FRONTEND_URL": {
      "description": "Frontend URL for CORS and redirects",
      "value": "https://amour-florals.netlify.app"
    }
  },
  "formation": {
    "web": {
      "quantity": 1
    }
  },
  "addons": [
    "heroku-mongodb:sandbox"
  ],
  "buildpacks": [
    {
      "url": "heroku/nodejs"
    }
  ]
}